# GovSecure AI Platform - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
GOVSECURE_ENVIRONMENT=development
GOVSECURE_DEPLOYMENT_ID=local-dev
GOVSECURE_BASE_DIR=.
GOVSECURE_DEBUG=true
GOVSECURE_VERSION=1.0.0

# =============================================================================
# API CONFIGURATION
# =============================================================================
GOVSECURE_API__HOST=0.0.0.0
GOVSECURE_API__PORT=8000
GOVSECURE_API__WORKERS=4
GOVSECURE_API__RELOAD=true
GOVSECURE_API__ENABLE_DOCS=true
GOVSECURE_API__API_VERSION=v1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
GOVSECURE_SECURITY__SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
GOVSECURE_SECURITY__ALGORITHM=HS256
GOVSECURE_SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
GOVSECURE_SECURITY__REFRESH_TOKEN_EXPIRE_DAYS=7
GOVSECURE_SECURITY__MFA_ENABLED=true
GOVSECURE_SECURITY__PASSWORD_MIN_LENGTH=12
GOVSECURE_SECURITY__PASSWORD_COMPLEXITY=true
GOVSECURE_SECURITY__SESSION_TIMEOUT_MINUTES=15

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
GOVSECURE_DATABASE__ENGINE=postgresql
GOVSECURE_DATABASE__HOST=localhost
GOVSECURE_DATABASE__PORT=5432
GOVSECURE_DATABASE__USERNAME=postgres
GOVSECURE_DATABASE__PASSWORD=your-secure-db-password
GOVSECURE_DATABASE__DATABASE=govsecure_ai
GOVSECURE_DATABASE__SSL_MODE=require
GOVSECURE_DATABASE__POOL_SIZE=10
GOVSECURE_DATABASE__MAX_OVERFLOW=20

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
GOVSECURE_CACHE__TYPE=redis
GOVSECURE_CACHE__HOST=localhost
GOVSECURE_CACHE__PORT=6379
GOVSECURE_CACHE__DB=0
GOVSECURE_CACHE__PASSWORD=your-redis-password
GOVSECURE_CACHE__SSL=false
GOVSECURE_CACHE__DEFAULT_TTL=300

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-openai-org-id
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# Alternative AI providers (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
GOVSECURE_AUTH__AUTH_PROVIDERS=["local", "saml", "oidc"]
GOVSECURE_AUTH__RBAC_ENABLED=true
GOVSECURE_AUTH__JWT_ENABLED=true
GOVSECURE_AUTH__SAML_ENABLED=false
GOVSECURE_AUTH__OIDC_ENABLED=false
GOVSECURE_AUTH__MAX_SESSIONS_PER_USER=5
GOVSECURE_AUTH__MAX_FAILED_LOGINS=5
GOVSECURE_AUTH__LOCKOUT_DURATION_MINUTES=30

# SAML Configuration (if enabled)
GOVSECURE_AUTH__SAML_METADATA_URL=https://your-idp.gov/metadata
GOVSECURE_AUTH__SAML_ENTITY_ID=urn:gov:govsecure:ai

# OIDC Configuration (if enabled)  
GOVSECURE_AUTH__OIDC_PROVIDERS__AZURE__CLIENT_ID=your-azure-client-id
GOVSECURE_AUTH__OIDC_PROVIDERS__AZURE__CLIENT_SECRET=your-azure-client-secret
GOVSECURE_AUTH__OIDC_PROVIDERS__AZURE__ISSUER=https://login.microsoftonline.com/your-tenant-id/v2.0

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
GOVSECURE_COMPLIANCE__COMPLIANCE_LEVEL=fedramp_high
GOVSECURE_COMPLIANCE__AUTO_REMEDIATION_ENABLED=true
GOVSECURE_COMPLIANCE__SCANS_SCHEDULE="0 0 * * *"
GOVSECURE_COMPLIANCE__REPORT_GENERATION_ENABLED=true
GOVSECURE_COMPLIANCE__CONTINUOUS_MONITORING_ENABLED=true
GOVSECURE_COMPLIANCE__VULNERABILITY_SCAN_ENABLED=true
GOVSECURE_COMPLIANCE__STIG_COMPLIANCE_ENABLED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
GOVSECURE_LOGGING__LEVEL=INFO
GOVSECURE_LOGGING__FORMAT=json
GOVSECURE_LOGGING__LOG_TO_FILE=true
GOVSECURE_LOGGING__LOG_FILE=logs/govsecure-ai.log
GOVSECURE_LOGGING__ENABLE_AUDIT_LOGS=true
GOVSECURE_LOGGING__AUDIT_LOG_FILE=logs/audit.log
GOVSECURE_LOGGING__OPENTELEMETRY_ENABLED=true
GOVSECURE_LOGGING__OPENTELEMETRY_ENDPOINT=http://localhost:4317

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
GOVSECURE_AI__MODEL_REGISTRY_PATH=models
GOVSECURE_AI__ENABLE_GPU=false
GOVSECURE_AI__MAX_BATCH_SIZE=16
GOVSECURE_AI__DEFAULT_INFERENCE_TIMEOUT=60
GOVSECURE_AI__ENABLE_STREAM_RESPONSES=true
GOVSECURE_AI__MODEL_VALIDATION_REQUIRED=true
GOVSECURE_AI__MODEL_MONITORING_ENABLED=true
GOVSECURE_AI__EXPLAINABILITY_REQUIRED=true

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
GOVSECURE_STORAGE__PROVIDER=local
GOVSECURE_STORAGE__LOCAL_PATH=data
GOVSECURE_STORAGE__ENCRYPTION_ENABLED=true
GOVSECURE_STORAGE__ENCRYPTION_KEY_MANAGEMENT=application
GOVSECURE_STORAGE__FILE_SIZE_LIMIT_MB=100

# Cloud storage (if using AWS/Azure/GCP)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-gov-west-1
GOVSECURE_STORAGE__BUCKET_NAME=govsecure-ai-storage

AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=govsecure-ai

GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=your-grafana-password

JAEGER_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
GOVSECURE_FEATURES__DEMO_MODE=true
GOVSECURE_FEATURES__MOCK_AI_RESPONSES=false
GOVSECURE_FEATURES__BYPASS_AUTH=false
GOVSECURE_FEATURES__ENABLE_DEBUG_ENDPOINTS=true

# Frontend URLs
FRONTEND_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3001

